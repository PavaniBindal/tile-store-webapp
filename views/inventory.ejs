<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Inventory</title>
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/style.css" />
  </head>
  <body>
    <!-- Mobile Toggle Button -->
    <button class="mobile-toggle" id="mobileToggle">
      <i class="fas fa-bars"></i>
    </button>

    <!-- Dashboard Container -->
    <div id="dashboardContainer" class="dashboard-container">
      <!-- Sidebar -->
      <div class="sidebar" id="sidebar">
        <div class="sidebar-header">
          <h4><i class="fas fa-th-large"></i> Tile Store</h4>
        </div>
        <ul class="sidebar-menu">
          <li>
            <a href="/order-history" class="nav-link" data-page="orders">
              <i class="fas fa-clipboard-list"></i> Order History
            </a>
          </li>
          <li>
            <a
              href="/inventory"
              class="nav-link active"
              data-page="inventory"
            >
              <i class="fas fa-boxes"></i> Inventory
            </a>
          </li>
          <li>
            <a href="/customers" class="nav-link" data-page="customers">
              <i class="fas fa-users"></i> Customer Details
            </a>
          </li>
          <li>
            <a href="#" id="logoutBtn">
              <i class="fas fa-sign-out-alt"></i> Logout
            </a>
          </li>
        </ul>
      </div>

      <!-- Main Content -->
      <div class="main-content">
        <!-- Inventory Page -->
        <div id="inventoryPage" class="content-page">
          <div class="content-header">
            <h1>Inventory Management</h1>
          </div>

          <div class="controls-bar">
            <div class="row">
              <div class="col-md-4">
                <div class="input-group">
                  <input
                    type="text"
                    class="form-control"
                    placeholder="Search by model or size..."
                    id="inventorySearch"
                  />
                  <button class="btn btn-outline-secondary" type="button">
                    <i class="fas fa-search"></i>
                  </button>
                </div>
              </div>
              <div class="col-md-4">
                <select class="form-select" id="sortInventory">
                  <option value="">Sort by...</option>
                  <option value="stock-asc">Stock (Low to High)</option>
                  <option value="stock-desc">Stock (High to Low)</option>
                  <option value="price-asc">Price (Low to High)</option>
                  <option value="price-desc">Price (High to Low)</option>
                </select>
              </div>
              <div class="col-md-4">
                <button class="btn btn-primary" id="addTileBtn">
                  <i class="fas fa-plus"></i> Add Tile
                </button>
                <button class="btn btn-success" id="updateStockBtn">
                  <i class="fas fa-sync"></i> Update Stock
                </button>
              </div>
            </div>
          </div>

          <div class="data-table-container">
            <table class="table table-hover">
              <thead>
                <tr>
                  <th>Model No.</th>
                  <th>Size</th>
                  <th>Type</th>
                  <th>Price per Sq.Ft</th>
                  <th>Stock</th>
                  <th>Supplier</th>
                  <th>Actions</th>
                </tr>
              </thead>
              <tbody id="inventoryTableBody">
                <tr>
                  <td>TL-001</td>
                  <td>12" x 12"</td>
                  <td>Ceramic</td>
                  <td>₹45</td>
                  <td><span class="stock-high">250 pcs</span></td>
                  <td>Kajaria</td>
                  <td>
                    <div class="action-buttons">
                      <button class="btn btn-info btn-sm">
                        <i class="fas fa-eye"></i> View
                      </button>
                      <button class="btn btn-warning btn-sm">
                        <i class="fas fa-edit"></i> Edit
                      </button>
                      <button class="btn btn-danger btn-sm">
                        <i class="fas fa-trash"></i> Delete
                      </button>
                    </div>
                  </td>
                </tr>
                <tr>
                  <td>TL-002</td>
                  <td>18" x 18"</td>
                  <td>Vitrified</td>
                  <td>₹85</td>
                  <td><span class="stock-medium">45 pcs</span></td>
                  <td>Somany</td>
                  <td>
                    <div class="action-buttons">
                      <button class="btn btn-info btn-sm">
                        <i class="fas fa-eye"></i> View
                      </button>
                      <button class="btn btn-warning btn-sm">
                        <i class="fas fa-edit"></i> Edit
                      </button>
                      <button class="btn btn-danger btn-sm">
                        <i class="fas fa-trash"></i> Delete
                      </button>
                    </div>
                  </td>
                </tr>
                <tr>
                  <td>TL-003</td>
                  <td>24" x 24"</td>
                  <td>Marble</td>
                  <td>₹120</td>
                  <td><span class="stock-low">12 pcs</span></td>
                  <td>Johnson</td>
                  <td>
                    <div class="action-buttons">
                      <button class="btn btn-info btn-sm">
                        <i class="fas fa-eye"></i> View
                      </button>
                      <button class="btn btn-warning btn-sm">
                        <i class="fas fa-edit"></i> Edit
                      </button>
                      <button class="btn btn-danger btn-sm">
                        <i class="fas fa-trash"></i> Delete
                      </button>
                    </div>
                  </td>
                </tr>
                <tr>
                  <td>TL-004</td>
                  <td>6" x 6"</td>
                  <td>Mosaic</td>
                  <td>₹65</td>
                  <td><span class="stock-high">180 pcs</span></td>
                  <td>Asian Granito</td>
                  <td>
                    <div class="action-buttons">
                      <button class="btn btn-info btn-sm">
                        <i class="fas fa-eye"></i> View
                      </button>
                      <button class="btn btn-warning btn-sm">
                        <i class="fas fa-edit"></i> Edit
                      </button>
                      <button class="btn btn-danger btn-sm">
                        <i class="fas fa-trash"></i> Delete
                      </button>
                    </div>
                  </td>
                </tr>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
    <script src="script.js"></script>
  </body>
</html>
